.left-content
  .left-content__header
    .left-content__header__box
      %h3.left-content__header__box__name
        = current_user.name
      %ul.left-content__header__box__icon
        %li.list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .left-content__groups
    - current_user.groups.each do |group|
      .left-content__groups__group
        = link_to group_messages_path(group) do
          .left-content__groups__group__name
            = group.name
          .left-content__groups__group__subtext
            = group.show_last_message